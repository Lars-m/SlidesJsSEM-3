extends layout1

block content
    div(style="width:200px;")
        select(size="2" style="width:100%;height: 100px;")
            each person in persons
                option(value=person.id) #{person.name}
        div(style="width=100%;margin-top:10px;")
            form(method="post" id="nameform")
                label Add Person:
                input(name="name")
                input(type="submit")